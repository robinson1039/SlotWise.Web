@model SlotWise.Web.DTOs.ServiceDTO
@{
    ViewData["Title"] = "Editar servicio";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Servicios</a></li>
            <li class="breadcrumb-item active">Editar servicio</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="card">

        <div class="card-header">
            <h3 class="m-0 font-weight-bold text-primary">Editar servicio</h3>
        </div>

        <div class="card-body mt-3">
            <form asp-action="Edit" method="POST" class="row g-3">

                <!-- Campo oculto para el ID -->
                <input type="hidden" asp-for="Id" />

                <!-- Nombre del servicio -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="NameService" class="form-control" placeholder="@Html.DisplayFor(dto => dto.NameService)">
                        <label asp-for="NameService"></label>
                        <span asp-validation-for="NameService" class="text-danger"></span>
                    </div>
                </div>

                <!-- Precio -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Price" class="form-control" placeholder="@Html.DisplayFor(dto => dto.Price)" type="number" step="0.01">
                        <label asp-for="Price"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <!-- Especialista -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="SpecialistId" class="form-select" asp-items="ViewBag.Specialists">
                            <option value="">-- Seleccione un especialista --</option>
                        </select>
                        <label asp-for="SpecialistId"></label>
                        <span asp-validation-for="SpecialistId" class="text-danger"></span>
                    </div>
                </div>

                <!-- Descripción -->
                <div class="col-12">
                    <div class="form-floating">
                        <textarea asp-for="Description" class="form-control" style="height: 100px" placeholder="@Html.DisplayFor(dto => dto.Description)"></textarea>
                        <label asp-for="Description"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- Estado -->
                <div class="col-12">
                    <div class="form-check mt-4">
                        <input asp-for="Status" class="form-check-input" type="checkbox" />
                        <label asp-for="Status" class="form-check-label"></label>
                    </div>
                </div>

                <!-- Botones -->
                <div class="text-center mt-3">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
