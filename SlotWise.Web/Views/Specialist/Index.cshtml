@using SlotWise.Web.Core.Pagination
@using SlotWise.Web.DTOs
@model PaginationResponse<SpecialistDTO>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
@{
    ViewData["Title"] = "Especialistas";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Inicio</a></li>
            <li class="breadcrumb-item active">Especialistas</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="card">

        <div class="card-header">
            <div class="row">
                <h3 class="m-0 font-weight-bold text-primary col-md-11">Especialistas</h3>
                <div class="col-md-1">
                    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i></a>
                </div>
            </div>
        </div>

        <div class="card-body mt-3">
            <form asp-action="Index" class="navbar-search" method="GET">
                <input type="hidden" name="Page" value="1" />

                <div class="row mt-3">
                    <div class="col-md-auto">
                        <select name="RecordsPerPage" class="form-select bg-light border-0 small"
                                asp-for="RecordsPerPage" onchange="this.form.submit()">
                            <option value="2" selected="@(Model.RecordsPerPage == 2)">2</option>
                            <option value="10" selected="@(Model.RecordsPerPage == 10)">10</option>
                            <option value="15" selected="@(Model.RecordsPerPage == 15)">15</option>
                            <option value="30" selected="@(Model.RecordsPerPage == 30)">30</option>
                            <option value="50" selected="@(Model.RecordsPerPage == 50)">50</option>
                        </select>
                    </div>

                    <div class="col-md-10">
                        <div class="input-group mb-3">
                            <input type="text"
                                   class="form-control bg-light border-0 small"
                                   placeholder="Buscar especialista..."
                                   aria-label="search"
                                   asp-for="Filter" />
                            <button class="btn btn-primary"><i class="bi bi-search"></i></button>
                        </div>
                    </div>
                </div>
            </form>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Edad</th>
                        <th>Estado</th>
                        <th>Fecha creación</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SpecialistDTO item in Model.List)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Age</td>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </td>
                            <td>@item.CreateAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil-fill"></i></a>

                                <form asp-action="Toggle" style="display: contents;" method="POST">
                                    <input type="hidden" value="@item.Id" name="Id" />  <!-- Cambiado a "Id" -->
                                    <input type="hidden" value="@(!item.Status)" name="Status" />
                                    <button class="btn btn-sm @(item.Status ? "btn-secondary" : "btn-info")"
                                            data-bs-toggle="tooltip" data-bs-placement="top"
                                            title="@(item.Status ? "Desactivar" : "Activar")">
                                        <i class="@(item.Status ? "bi bi-eye-slash-fill" : "bi bi-eye")"></i>
                                    </button>
                                </form>

                                <form asp-action="Delete" asp-route-Id="@item.Id" style="display: contents;">
                                    <button class="btn btn-sm btn-danger btnDelete"><i class="bi bi-trash-fill"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <nav aria-label="">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link @(Model.CurrentPage == 1 ? "disabled" : "")"
                           asp-route-Page="1"
                           asp-route-RecordsPerPage="@Model.RecordsPerPage"
                           asp-route-Filter="@Model.Filter"
                           asp-action="Index">
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>

                    <li class="page-item">
                        <a class="page-link @(!Model.HasPrevious ? "disabled" : "")"
                           asp-route-Page="@(Model.CurrentPage - 1)"
                           asp-route-RecordsPerPage="@Model.RecordsPerPage"
                           asp-route-Filter="@Model.Filter"
                           asp-action="Index">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @foreach (int page in Model.Pages)
                    {
                        <li class="page-item">
                            <a class="page-link @(Model.CurrentPage == page ? "disabled" : "")"
                               asp-route-Page="@(page)"
                               asp-route-RecordsPerPage="@Model.RecordsPerPage"
                               asp-route-Filter="@Model.Filter"
                               asp-action="Index">
                                @(page)
                            </a>
                        </li>
                    }

                    <li class="page-item">
                        <a class="page-link @(!Model.HasNext ? "disabled" : "")"
                           asp-route-Page="@(Model.CurrentPage + 1)"
                           asp-route-RecordsPerPage="@Model.RecordsPerPage"
                           asp-route-Filter="@Model.Filter"
                           asp-action="Index">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>

                    <li class="page-item">
                        <a class="page-link @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")"
                           asp-route-Page="@Model.TotalPages"
                           asp-route-RecordsPerPage="@Model.RecordsPerPage"
                           asp-route-Filter="@Model.Filter"
                           asp-action="Index">
                            <i class="bi bi-chevron-double-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btnDelete').click(function (event) {
                event.preventDefault();

                Swal.fire({
                    icon: "question",
                    title: "¿Desea eliminar el especialista?",
                    text: "No podrá revertirlo",
                    showCancelButton: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        const form = $(this).closest('form');
                        form.submit();
                    }
                });
            });
        });
    </script>
}
